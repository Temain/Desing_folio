<div class="b-content__header">
  <div class="b-content__title">Log in</div>
</div>
<div class="b-form login">
  <%= render 'shared/errors_flash' %>
  <%= form_for(:session, url: sessions_path, remote: true) do |f| %>
      <div class="b-form__field">
        <%= f.label :email, "Email:", class: "b-field__label" %>
        <%= f.text_field :email, class: "b-field__text-field" %>
      </div>

      <div class="b-form__field">
        <%= f.label :password, "Password:", class: "b-field__label" %>
        <%= f.password_field :password, class: "b-field__text-field" %>
      </div>

      <div class="b-form__field">
        <%= f.submit "Log in", class: "b-form__submit b-form__submit-text" %>
      </div>
  <% end %>

  <!-- <p>New user? <%= link_to "Sign up now!", signup_path, remote: true %></p> -->
</div>