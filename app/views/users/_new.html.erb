<div class="b-content__title">
  Registration
</div>
<%= render 'shared/errors' %>
<div class="b-form">
  <%= form_for(@user, remote: true) do |f| %>
      <div class="b-form__field">
        <%= f.label :name, "Username:", class: "b-field__label" %>
        <%= f.text_field :name, class: "b-field__text-field" %>
      </div>

      <div class="b-form__field">
        <%= f.label :email, "Email:", class: "b-field__label" %>
        <%= f.text_field :email, class: "b-field__text-field" %>
      </div>

      <div class="b-form__field">
        <%= f.label :password, "Password:", class: "b-field__label" %>
        <%= f.password_field :password, class: "b-field__text-field" %>
      </div>

      <div class="b-form__field">
        <%= f.label :password_confirmation, "Confirmation:", class: "b-field__label" %>
        <%= f.password_field :password_confirmation, class: "b-field__text-field" %>
      </div>

      <div class="b-form__field">
        <%= f.submit "Sign up", class: "b-form__submit b-form__submit-text" %>
      </div>
  <% end %>
</div>