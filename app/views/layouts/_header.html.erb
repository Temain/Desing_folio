<div class="b-page__head">
  <div class="monster"></div>
  <div class="b-head__logo">
    <div class="b-creator">starting point for</div>
    <div class="b-logo">Dev Noobs</div>
  </div>
  <div class="b-head__menu">
        <div class="b-menu__profile">
          <% if signed_in? %>
             Welcome, <%= link_to @current_user.name, @current_user, remote: true %> |
             <%= link_to "Log out", signout_path, method: 'delete', remote: true, :class => "" %>
          <% else %>
             <%= link_to "Log in", signin_path, remote: true, :class => "" %>
             or
             <%= link_to "Sign up", signup_path, remote: true, :class => "" %>
          <% end %>
        </div>
    <nav class="b-menu">
      <ul>
        <li class="b-menu__item"><%= link_to "HOME", microposts_path, remote: true, :class => "b-item__link b-item__link_active" %></li>
        <li class="b-menu__item"><%= link_to "WORK", "#", remote: true, :class => "b-item__link" %></li>
        <li class="b-menu__item"><a class="b-item__link" href="#">ARTICLES</a></li>
        <li class="b-menu__item"><a class="b-item__link" href="#">BOOKS</a></li>
        <li class="b-menu__item"><a class="b-item__link" href="#">VIDEOS</a></li>
      </ul>
    </nav>
  </div>
  <div class="b-head__slider">
    <div class="carousel slide" id="myCarousel">
      <ol class="carousel-indicators">
        <li class="active" data-target="#myCarousel" data-slide-to="0"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag("java_img.jpg") %>
          <div class="carousel-caption">
            <h4 class="carousel-caption__text">Bla bla bla...</h4>
            <!-- <p>Текст описания слайда</p> -->
          </div>
        </div>
        <div class="item">
          <%= image_tag("ruby_img.jpg") %>
          <div class="carousel-caption">
            <h4 class="carousel-caption__text">O, bla bla bla...</h4>
            <!-- <p>Текст описания слайда</p> -->
          </div>
        </div>
        <div class="item">
          <%= image_tag("net_img.jpg") %>
          <div class="carousel-caption">
            <h4 class="carousel-caption__text">And bla bla.</h4>
            <!-- <p>Текст описания слайда</p> -->
          </div>
        </div>
      </div>
      <a class="carousel-control left" data-slide="prev" href="#myCarousel">&lsaquo;</a>
      <a class="carousel-control right" data-slide="next" href="#myCarousel">&rsaquo;</a>
    </div>
  </div>
</div>